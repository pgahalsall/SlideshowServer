{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
    {
        "type": "node",
        "request": "launch",
        "name": "Launch Root",
        "program": "${workspaceRoot}/bin/www",
    },
    {
        "type": "node",
        "request": "launch",
        "name": "Launch Folder",
        "program": "${workspaceFolder}/app.js",
    },
    {
        "type": "node",
        "request": "attach",
        "name": "Attach to Port",
        "address": "localhost",
        "port": 3000
        },
        {
            "type": "chrome",
            "request": "attach",
            "name": "Attach to Chrome",
            "port": 3000,
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceRoot}/src",
            "breakOnLoad": true
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome Users",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceRoot}/users.js",
            "breakOnLoad": true
        }
       
    ]
}